{
  "extends": ["airbnb-base"],
  "env": {
    "es6": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "sinon": false
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": [
      "warn",
      {
        "code": 100
      }
    ],
    "import/extensions": ["error", "always"],
    "no-use-before-define": ["off"],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "rules": {
        "no-unused-expressions": ["off"]
      }
    }
  ]
}
